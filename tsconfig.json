{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "sourceMap": false,
        "allowJs": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "paths": {
            "@app/*": ["./*"]
        }
    },
    "include": ["src/**/*"]
}
